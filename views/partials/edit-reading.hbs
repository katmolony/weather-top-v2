<form class="box" action="/station/{{station._id}}/updatereading/{{reading._id}}" method="POST">
  <label>New Reading Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="any" placeholder="Enter Code" name="code" value="{{reading.code}}">
      </div>
      <div class="field">
        <input class="input" type="any" placeholder="Enter Temperature" name="temperature" value="{{reading.temperature}}">
      </div>
      <div class="field">
        <input class="input" type="any" placeholder="Enter Wind Spped" name="windSpeed" value="{{reading.windSpeed}}">
      </div>
      <div class="field">
        <input class="input" type="any" placeholder="Enter Pressure" name="pressure" value="{{reading.pressure}}">
      </div>
    </div>
  </div>
  <button class="button is-primary">Update Reading</button>
</form>