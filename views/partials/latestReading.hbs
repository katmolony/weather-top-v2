
<div class="container">
    <div class="columns">

        <div class="column is-one-fifth">
            <box class="box">
                <i class="icon"> {{>icons/location}}</i>
                <label class="label">Station</label>
                <p>{{station.name}}</p>
                <p>Latitude: {{station.lat}}</p>
                <p>Longitude: {{station.lng}}</p>
            </box>
        </div>

        <div class="column is-one-fifth">
            <box class="box">
                <span class="icon">    
                    <i class="right floated huge icon">
                    {{>icons/weather}}</i>
                    </span>
                <label class="label">Weather</label>
                <p>{{latestReading.code}}</p>
            </box>
        </div>

        <div class="column is-one-fifth">
            <box class="box">
                <span class="icon">
                    <i class="right floated huge icon">
                        {{>icons/temp}}
                        </i>
                        </span>
                        <label class="label">Temperature</label>
                <p>{{latestReading.temperature}} °C</p>
                <p>{{fahrenheit}}°F</p>
            </box>
        </div>

        <div class="column is-one-fifth">
            <box class="box">
                <span class="icon">    
                    <i></i>
                        {{>icons/wind}}
                        </i>
                        </span>
                <label class="label">Wind</label>
                <p>{{latestReading.windSpeed}}</p>
                <p>{{beafourt}} Bft</p>
                <p>{{windCompass}}</p>
                <p>Feels like {{windChill}}</p>
            </box>
        </div>

        <div class="column is-one-fifth">
            <box class="box">
                <i class="right floated huge icon">{{>icons/pressure}}</i>
                <label class="label">Pressure</label>
                <p>{{latestReading.pressure}}</p>
                </box>
        </div>

    </div>
</div>